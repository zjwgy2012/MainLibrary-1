<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/bg_color"
    android:orientation="vertical" >

    <include layout="@layout/common_topbar" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="2dip"
        android:background="#FF909090" />

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="7.0"
        android:background="@drawable/white"
        android:stretchColumns="0,1" >

        <TableRow android:layout_weight="1.0" >

            <Button
                android:id="@+id/btn_personal_information"
                style="@style/Mainpage_Navi_Button"
                android:layout_column="0"
                android:drawableTop="@drawable/home_person_information"
                android:text="@string/mainpage_personal_information" />

            <Button
                android:id="@+id/btn_my_shelf"
                style="@style/Mainpage_Navi_Button"
                android:layout_column="1"
                android:drawableTop="@drawable/home_book_shelf"
                android:text="@string/mainpage_my_shelf" />
        </TableRow>

        <TableRow android:layout_weight="1.0" >

            <Button
                android:id="@+id/btn_book_borrowed"
                style="@style/Mainpage_Navi_Button"
                android:layout_column="0"
                android:drawableTop="@drawable/home_borrowed_book"
                android:text="@string/mainpage_borrowed_books" />

            <Button
                android:id="@+id/btn_book_records"
                style="@style/Mainpage_Navi_Button"
                android:layout_column="1"
                android:drawableTop="@drawable/home_books_records"
                android:text="@string/mainpage_book_records" />
        </TableRow>
    </TableLayout>

</LinearLayout>